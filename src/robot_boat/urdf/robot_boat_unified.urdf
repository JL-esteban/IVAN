<robot name="robot_boat">
  
  <!-- CUERPO PRINCIPAL (usando el STL de la caja) -->
  <link name="base">
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0" />
      <mass value="0.4" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://robot_boat/meshes/caja.STL"/>
      </geometry>
      <material name="azul_claro">
        <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.1 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- PUNTA DELANTERA (cono naranja) -->
  <link name="punta">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
      <material name="naranja">
        <color rgba="1 0.549019607843137 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="punta_joint" type="fixed">
    <origin xyz="0.08 0 0" rpy="0 0 0" />
    <parent link="base"/>
    <child link="punta"/>
  </joint>

  <!-- MOTOR IZQUIERDO -->
  <link name="motor_left">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.015"/>
      </geometry>
      <material name="gris_claro">
        <color rgba="0.796078431372549 0.823529411764706 0.937254901960784 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.08" radius="0.015"/>
      </geometry>
    </collision>
  </link>

  <joint name="motor_left_joint" type="continuous">
    <origin xyz="-0.04 -0.08 0" rpy="0 1.5708 0" />
    <parent link="base"/>
    <child link="motor_left"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" velocity="10.0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <!-- MOTOR DERECHO -->
  <link name="motor_right">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.015"/>
      </geometry>
      <material name="gris_claro">
        <color rgba="0.796078431372549 0.823529411764706 0.937254901960784 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.08" radius="0.015"/>
      </geometry>
    </collision>
  </link>

  <joint name="motor_right_joint" type="continuous">
    <origin xyz="0.04 -0.08 0" rpy="0 1.5708 0" />
    <parent link="base"/>
    <child link="motor_right"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" velocity="10.0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

</robot>
